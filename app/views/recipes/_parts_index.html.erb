<div class="page-header">
  <%= link_to new_part_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Part
  <% end %>
  <h1>Listing parts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Amount</th>
            <th>Ingredient</th>
            <th>Cost</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @parts) do |part| %>
            <td><%= part.amount %></td>
            <td><%= part.ingredient.name %></td>
            <td><%= part.ingredient.cost* part.amount %></td>
            <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
