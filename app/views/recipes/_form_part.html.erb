<%= form_for(@part, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @part.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@part.errors.count, "error") %> prohibited this part from being saved:</h4>

      <ul>
      <% @part.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :amount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :amount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ingredient, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :ingredient, @ingredients %>
    </div>
  </div>
  <%= f.hidden_field :recipe_id, value: params[:id] %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
