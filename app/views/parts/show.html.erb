<div class="page-header">
  <%= link_to parts_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_part_path(@part), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show part</h1>
</div>

<dl class="dl-horizontal">
  <dt>Amount:</dt>
  <dd><%= @part.amount %></dd>

  <dt>Ingredient:</dt>
  <dd><%= @part.ingredient.name %></dd>

</dl>
